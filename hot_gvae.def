Bootstrap: docker
From: pytorch/pytorch:2.2.2-cuda12.1-cudnn8-runtime   # Python 3.11 + CUDA 12.1 + Torch 2.2.2

%labels
    Author   q25030
    Purpose  "Graph-VAE experiments on Wisteria GPU nodes"

%post
    ## 基本ツール & pip upgrade
    apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
        git ca-certificates && \
    rm -rf /var/lib/apt/lists/*
    python -m pip install --no-cache-dir --upgrade pip

    ## 追加 Python パッケージ
    ##   numpy / pandas はベースに含まれている
    python -m pip install --no-cache-dir \
        pandas \
        tensorboard \
        networkx \
        scipy \
        torch_geometric \
        torch_scatter -f https://data.pyg.org/whl/torch-2.2.0+cu121.html

    ## 作業ディレクトリ
    mkdir -p /workspace && chmod 777 /workspace

%environment
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8
    export PYTHONUNBUFFERED=1
    cd /workspace

%runscript
    #!/bin/bash
    if [ $# -eq 0 ]; then
        exec bash
    else
        exec "$@"
    fi

%test
    python - << 'EOF'
import torch, sys, scipy
print("Python :", sys.version.split()[0])
print("Torch  :", torch.__version__, "| CUDA", torch.version.cuda)
print("SciPy  :", scipy.__version__)
print("GPU OK :", torch.cuda.is_available())
EOF
